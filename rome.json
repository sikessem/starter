{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "organizeImports": {
        "enabled": true,
        "ignore": ["node_modules", "vendor", "public/static"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useBlockStatements": "error",
                "useShorthandArrayType": "error",
                "noShoutyConstants": "warn"
            }
        },
        "ignore": ["node_modules", "vendor", "public/static"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 80,
        "ignore": ["node_modules", "vendor", "public/static"]
    }
}
